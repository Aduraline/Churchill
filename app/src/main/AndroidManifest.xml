<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="africa.of.designers.churchill">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name=".WordSearchApp"
        android:allowBackup="true"
        android:icon="@drawable/panda"
        android:label="@string/app_name"
        android:roundIcon="@drawable/panda"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LessonDetailActivity"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".Splashscreen"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".CreateAccount"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppThemeDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="co.paystack.android.PublicKey"
            android:value="INPUT_PAYSTACK_PUBLIC_KEY_HERE"/>
        <meta-data
            android:name="com.parse.SERVER_URL"
            android:value="@string/back4app_server_url" />
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/back4app_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/back4app_client_key" />

        <activity
            android:name=".HomeFragment"
            android:theme="@style/AppThemeDark" />
        <activity android:name=".CheckOutActivity"
            android:theme="@style/AppPayTheme"/>
        <activity
            android:name=".GreetingsActivity"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".CalendarActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".CountingActivity"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".FamilyActivity"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".SeasonsActivity"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".features.settings.SettingsActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".features.gameplay.GamePlayActivity"
            android:theme="@style/AppThemeDark">
        </activity>
        <activity android:name=".features.mainmenu.MainMenuActivity"
            android:theme="@style/AppThemeDark">
        </activity>
        <activity android:name=".features.gameover.GameOverActivity"
            android:theme="@style/AppThemeDark">
        </activity>
        <activity
            android:name=".features.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme"/>
        <activity android:name=".features.gamehistory.GameHistoryActivity">
        </activity>
        <activity android:name=".PracticeActivity"
            android:theme="@style/AppThemeDark"></activity>
    </application>

</manifest>