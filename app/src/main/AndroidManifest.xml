<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="africa.of.designers.churchill">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name=".Churchill"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@drawable/panda"
        android:label="@string/app_name"
        android:roundIcon="@drawable/panda"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity" />

        <activity
            android:name=".ui.practice.PracticeActivity" />

        <activity
            android:name=".ui.login.LoginActivity" />

        <activity
            android:name=".ui.register.RegisterActivity" />

        <activity
            android:name=".ui.lesson.LessonActivity" />

        <activity
            android:name=".ui.lessondetail.LessonDetailActivity" />

        <meta-data
            android:name="co.paystack.android.PublicKey"
            android:value="INPUT_PAYSTACK_PUBLIC_KEY_HERE"/>
        <meta-data
            android:name="com.parse.SERVER_URL"
            android:value="@string/back4app_server_url" />
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/back4app_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/back4app_client_key" />

    </application>

</manifest>
